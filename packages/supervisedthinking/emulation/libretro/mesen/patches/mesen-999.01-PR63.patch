diff --git a/Core/EPSMAudio.h b/Core/EPSMAudio.h
index 8ee7e6b0..3ce0a6c8 100644
--- a/Core/EPSMAudio.h
+++ b/Core/EPSMAudio.h
@@ -42,10 +42,10 @@ class EPSMAudio : public EPSMSSGAudio
 
 	struct InputEntry
 	{
-		uint8_t addr = 0;
-		uint8_t data = 0;
-		uint8_t cycle = 0;
-		uint8_t wrote = 0;
+		uint8_t addr;
+		uint8_t data;
+		uint8_t cycle;
+		uint8_t wrote;
 	};
 
 	static constexpr uint8_t INPUT_BUFFER_SIZE = cycleCount;
@@ -156,7 +156,7 @@ class EPSMAudio : public EPSMSSGAudio
 		}
 	}
 
-	uint32_t getClockFrequency()
+	uint32_t getClockFrequency()  
 	{
 		return _console->GetSettings()->GetEPSMClockFrequency() / 6;
 	}
